<!DOCTYPE html>
<html lang="vi">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="This is social network html5 template available in themeforest......" />
    <meta name="keywords" content="Social Network, Social Media, Make Friends, Newsfeed, Profile Page" />
    <meta name="robots" content="index, follow" />
    <title>TouristReview <%= __('leadingPage_title')%></title>

    <!-- Stylesheets
    ================================================= -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/ionicons.min.css" />
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css" />

    <!--Google Font-->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700,700i" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <!--Favicon-->
    <link rel="shortcut icon" type="image/png" href="/assets/images/fav.png" />
    <style>
        .navbar-brand {
            padding: 5px 15px !important;
        }
    </style>
</head>

<body>

    <!-- Header
    ================================================= -->
    <header id="header-inverse">
        <nav class="navbar navbar-default navbar-fixed-top menu loginpage">
            <div class="container">

                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a type="button" class="collapsed" href="/login"> <%= __('LoginTitle')%>
                </a>
                    <a class="navbar-brand" href="/"><img src="/assets/images/logo-white.png" alt="TouristReview" /></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <form id="login_form" method="POST" action="/login" class="navbar-form navbar-right hidden-sm login-header">
                        <div class="form-group">
                            <input id='username' type="text" class="form-control login-page" name="email" placeholder="<%= __('placeholder_login_1') %>" required>
                            <input id='pass_login' type="password" class="form-control login-page" name="password" placeholder="<%= __('placeholder_login_2') %>" required>
                            <button type="submit" class="btn btn-primary">
                                <%= __('button_login_1') %></button>
                            <a href="#"><% __('placeholder_login_3')%></a>
                        </div>
                    </form>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
        </nav>
    </header>
    <!--Header End-->

    <!-- Landing Page Contents
    ================================================= -->
    <div id="lp-register">
        <div class="container wrapper">
            <div class="row">
                <div class="col-sm-5">
                    <div class="intro-texts">
                        <h1 class="text-white">
                            <%= __('landingpage_cap_2')%>
                        </h1>
                        <p>
                            <%= __('landingpage_cap_1')%>
                        </p>
                    </div>
                </div>
                <div class="col-sm-6 col-sm-offset-1">
                    <div class="reg-form-container">

                        <!--Registration Form Contents-->
                        <div class="tab-content">
                            <div class="tab-pane active" id="register">
                                <h3>
                                    <%= __('landingpage_cap_3')%>
                                </h3>
                                <span class="error-text"></span>
                                <!--Register Form-->
                                <form name="registration_form" id='registration_form' class="form-inline" onsubmit="return false;">
                                    <div class="row">
                                        <div class="form-group col-xs-6">
                                            <label for="firstname" class="sr-only">
                                                <%= __('placeholder_reg_1') %> </label>
                                            <input id="firstname" class="form-control input-group-lg" type="text"
                                                title="Enter first name" placeholder="<%= __('placeholder_reg_1')%>"  required/>
                                        </div>
                                        <div class="form-group col-xs-6">
                                            <label for="lastname" class="sr-only">
                                                <%= __('placeholder_reg_2') %></label>
                                            <input id="lastname" class="form-control input-group-lg" type="text"
                                                title="Enter last name" placeholder="<%= __('placeholder_reg_2')%>" required/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <label for="email" class="sr-only">
                                                <%= __('placeholder_reg_3')%></label>
                                            <input id="email" class="form-control input-group-lg" type="email"
                                                title="Enter Email" placeholder="<%= __('placeholder_reg_3')%>" required/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <label for="password" class="sr-only">
                                                <%= __('placeholder_reg_4')%></label>
                                            <input id="password" class="form-control input-group-lg" type="password"
                                                 title="Enter password" placeholder="<%= __('placeholder_reg_4')%>" required/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <p class="birth"><strong>
                                                <%= __('landingpage_cap_4')%></strong></p>
                                        <div class="form-group col-sm-3 col-xs-6">
                                            <label for="month" class="sr-only"></label>
                                            <select class="form-control" id="day">
                                                <option value="1" selected>1</option>
                                                <% for(var i=2; i < 32; i++) { %>
                                                <option value="<%= i %>">
                                                    <%= i %>
                                                </option>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="form-group col-sm-3 col-xs-6">
                                            <label for="month" class="sr-only"></label>
                                            <select class="form-control" id="month">
                                                <option value="1" selected>
                                                    <%= __('thang_1')%>
                                                </option>
                                                <% for(var i=2; i < 13; i++) { %>
                                                <option value="<%= i %>">
                                                    <%= __('thang_'+i) %>
                                                </option>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="form-group col-sm-6 col-xs-12">
                                            <label for="year" class="sr-only"></label>
                                            <select class="form-control" id="year">

                                                <% for(var i=2005; i > 1905; i--) { if(i==1995){ %>
                                                <option value="1995" selected>1995</option>
                                                <% }else{ %>
                                                <option value="<%= i %>">
                                                    <%= i %>
                                                </option>
                                                <%}} %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group gender">
                                        <label class="radio-inline">
                                            <input type="radio" name="sex" value="0" checked>
                                            <%= __('placeholder_reg_8')%>
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="sex" value="1">
                                            <%= __('placeholder_reg_9')%>
                                        </label>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-xs-6">
                                            <label for="city" class="sr-only">
                                                <%= __('placeholder_reg_10')%></label>
                                            <input id="city" class="form-control input-group-lg reg_name" type="text"
                                                name="city" title="Enter city" placeholder="<%= __('placeholder_reg_10')%>" required/>
                                        </div>
                                        <div class="form-group col-xs-6">
                                            <label for="country" class="sr-only"></label>
                                            <select class="form-control" id="country" required>
                                                <option value="none" disabled selected>
                                                    <%= __('placeholder_reg_11')%>
                                                </option>
                                                <% country.forEach(function(cou){ %>
                                                <option value="<%= cou.id %>"><%= cou.nicename %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <span style="display: block;">
                                        <%= __('reg_cap_1')%><a href="#">
                                            <%= __('reg_cap_2')%></a>, <a href="#">
                                            <%= __('reg_cap_3')%></a>
                                        <%= __('reg_cap_4')%></span>
                                    <button class="btn btn-primary reg-button"><%= __('button_reg_1')%></button>
                                </form>
                                
                                <!--Register Now Form Ends-->
                            </div>
                            <!--Registration Form Contents Ends-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--preloader-->
    <div id="spinner-wrapper">
        <div class="spinner"></div>
    </div>

    <!-- Scripts
    ================================================= -->
    <script src="/assets/js/app.js"></script>
    <script src="/assets/js/register.js"></script>
    <script src="/assets/js/jquery-3.1.1.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.appear.min.js"></script>
    <script src="/assets/js/jquery.incremental-counter.js"></script>
    <script src="/assets/js/script.js"></script>

</body>

</html>